<%- include('partials/header') %>
    <div>
        <div class="container w-25 pt-5">
            <div class="card p-5">
                <h1 class="text-center pb-4"> <%= product._id ? "Бараа засварлах" : "Бараа бүртгэх" %> </h1>
                <form action= "<% if(product._id ? "/editProduct" : "/add") %>" method="POST">
                    <input type="hidden" id="id" name="id" value = "<%= product._id %>">
                    <div class="form-outline mb-4">
                        <label class="form-label">Код</label>
                        <input type="text" id="code" class="form-control" name="code" value = <%= product.code %>>
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label">Нэр</label>
                        <input type="text" id="name" class="form-control" name="name" value = <%= product.name %>>
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label">Үнэ</label>
                        <input type="number" id="price" class="form-control" name="price" value = <%= product.price %>>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mb-4"> <%= product._id ? "Хадгалах" : "Бүртгэх" %> </button>
                </form>
            </div>

        </div>
    </div>
    <%- include('partials/footer') %>